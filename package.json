{
    "name": "express-web-service",
    "version": "1.0.0",
    "description": "tdd with express",
    "main": "app.js",
    "scripts": {
        "start": "nodemon app",
        "test": "jest --watch",
        "lint": "eslint ."
    },
    "author": "Maxim Klochkov",
    "license": "ISC",
    "dependencies": {
        "express": "^4.17.1"
    },
    "devDependencies": {
        "eslint": "^7.13.0",
        "eslint-config-prettier": "^6.15.0",
        "eslint-plugin-prettier": "^3.1.4",
        "jest": "^26.6.3",
        "nodemon": "^2.0.6",
        "prettier": "^2.1.2",
        "supertest": "^6.0.1"
    },
    "eslintConfig": {
        "root": true,
        "parserOptions": {
            "ecmaVersion": 6
        },
        "extends": [
            "eslint:recommended",
            "plugin:prettier/recommended"
        ],
        "plugins": [
            "prettier"
        ],
        "env": {
            "node": true,
            "es6": true,
            "jest": true
        },
        "rules": {
            "eqeqeq": "warn",
            "prettier/prettier": [
                "warn", {
                    "endOfLine": "auto"
                }
            ]
        }
    },
    "prettier": {
        "singleQuote": true,
        "printWidth": 80
    }
}
